{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "app",
  "version": "0.1.0",
  "identifier": "com.app.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/app/browser"
  },
  "app": {
    "windows": [
      {
        "label": "login",
        "title": "Lucchat - Login",
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "width": 400,
        "height": 500
      },
      {
        "label": "main",
        "title": "Lucchat",
        "decorations": true,
        "transparent": false,
        "fullscreen": false,
        "resizable": true,
        "width": 1200,
        "height": 800,
        "visible": false
      }
    ],

    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
